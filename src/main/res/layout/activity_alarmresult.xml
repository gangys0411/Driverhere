<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBeige">

    <TextView
        android:id="@+id/locate_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="현재 위치 : "/>

    <TextView
        android:id="@+id/select_station_nm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/bus_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="버스 번호 : "
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/select_bus_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/alarm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="DEV_alarmcontrol"
        android:clickable="true"
        android:text="알림 보내기에 성공했습니다.\n"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="승차 도우미 기능을 이용하면 해당 버스가 진입하면 알려드립니다."
        android:textSize="15sp"/>

    <Button
        android:id="@+id/ride_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="ride_in_help"
        android:layout_margin="20dp"
        android:textSize="25sp"
        android:background="@drawable/button2"
        android:text="승차 도우미"/>
</LinearLayout>