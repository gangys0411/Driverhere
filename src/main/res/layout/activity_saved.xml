<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBeige">

    <View
        android:id="@+id/middle_view"
        android:layout_width="1dp"
        android:layout_height="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bus_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="버스 즐겨찾기"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/middle_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back_bus"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#dfdfdf"
        app:layout_constraintEnd_toStartOf="@+id/middle_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bus_btn" />

    <TextView
        android:id="@+id/station_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="정류장 즐겨찾기"
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/middle_view"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back_station"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="#dfdfdf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/middle_view"
        app:layout_constraintTop_toBottomOf="@+id/station_btn" />

    <FrameLayout
        android:id="@+id/container_saved"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_bus" />

</androidx.constraintlayout.widget.ConstraintLayout>