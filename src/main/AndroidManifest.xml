<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ninefives.driverhere">

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"/>
        <activity android:name=".MainActivity2"/>

        <activity android:name=".BusRouteSearch"/>
        <activity android:name=".BusRouteResult"/>

        <activity android:name=".BusStationSearch"/>
        <activity android:name=".StationPassBus"/>

        <activity android:name=".AlarmSend"/>

        <activity android:name=".NextStopSearch"/>
        <activity android:name=".NextStopResult"/>
    </application>
    <uses-permission android:name = "android.permission.INTERNET"/>
</manifest>